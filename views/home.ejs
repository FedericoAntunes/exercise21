<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <div class="text-center">
      <h1 class="pt-4 text-success fw-bolder">TECH-BLOG</h1>
      <h5 class="text-warning fw-bolder">Express Yourself</h5>
    </div>
    <div class="container mt-5">
      <div class="row">
        <div class="col-lg-8 mb-5">
          <h2><%= articles[0].title %></h2>
          <small class="text-success"
            ><%= articles[0].user.firstname %> <%= articles[0].user.lastname %></small
          >
          <img class="mt-2 img-fluid" src="<%= articles[0].image  %>" alt="" />
        </div>
        <div class="col-lg-4 d-flex flex-column justify-content-evenly">
          <div>
            <h4><%= articles[1].title %></h4>
            <small class="text-success">
              <%= articles[1].user.firstname %> <%= articles[1].user.lastname %></small
            >
            <hr />
          </div>
          <div>
            <h4><%= articles[2].title %></h4>
            <small class="text-success">
              <%= articles[2].user.firstname %> <%= articles[2].user.lastname %></small
            >
            <hr />
          </div>
          <div>
            <h4><%= articles[3].title %></h4>
            <small class="text-success">
              <%= articles[3].user.firstname %> <%= articles[3].user.lastname %></small
            >
            <hr />
          </div>
        </div>
      </div>
      <section>
        <h4 class="pt-5">Big news</h4>
        <% for( let i = 4; i < articles.length; i++ ) {%>
        <div class="row mt-4">
          <hr />
          <div class="col-lg-4">
            <h3><%= articles[i].title %></h3>
            <small class="text-success d-block mt-4">Pepe Perez</small>
            <small class="text-muted d-block"> <%= articles[i].createdAt %></small>
          </div>
          <p class="col-lg-4 text-body-tertiary"><%= articles[i].content %></p>
          <img src="<%= articles[i].image  %>" class="col-lg-4 img-fluid" />
        </div>
        <% } %>
      </section>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
