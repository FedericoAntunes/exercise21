<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container">
      <div class="container d-flex justify-content-between p-3">
        <h2>Listado de Artículos</h2>
        <a class="btn btn-danger" href="/">Volver al Home</a>
        <a class="btn btn-success" href="/panel/usuarios">Usuarios</a>
        <a class="btn btn-success" href="/panel/comentarios">Comentarios</a>
      </div>
      <div class="row">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Titulo</th>
              <th scope="col">Contenido</th>
              <th scope="col">Imagen</th>
              <th scope="col">Autor</th>
              <th scope="col">Número de Comentarios</th>
            </tr>
          </thead>
          <tbody>
            <% for(article of articles) {%>
            <tr>
              <th scope="row"><%= article.id %></th>
              <td><%= article.title %></td>
              <td><%= article.content %></td>
              <td><%= article.image %></td>
              <td><%= article.user.firstname %> <%= article.user.lastname %></td>
              <td><a href=""></a></td>
              <td>
                <a class="pe-1" href="/panel/editar/articulo/<%= article.id %>"
                  ><button class="btn btn-primary">Editar</button></a
                ><a class="pe-1" href="/articulos/destroy/<%= article.id  %>"
                  ><button class="btn btn-danger">Eliminar</button></a
                >
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
